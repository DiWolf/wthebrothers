{% extends "templates/portal.njk" %}
{% block content %}
<section id="inner_area_banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                {% set S = __('services') %}
                <div class="inner_banner_text">
                    <h2>{{ S.banner.title }}</h2>
                    <ul>
                        <li>
                            <a href="index.html">{{ S.banner.breadcrumb.home }}</a>
                        </li>
                        <li>></li>
                        <li class="active">{{ S.banner.breadcrumb.current }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="serviecs_page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section_heading_center">
                    <h2>{{ S.heading }}</h2>
                    <p>{{ S.subheading }}</p>
                </div>
            </div>
        </div>
        <div class="service_wrapper_top">
            <div class="row">
                {% for item in S.items %}
                    <div class="col-lg-4 col-md-6 col-sm-12 col-12">
                        <div class="service_card_two_wrapper">
                            <div class="service_two_icon">
                                <img src="{{ item.icon }}" alt="" loading="lazy" decoding="async"></div>
                                <div class="service_two_heading">
                                    <h3>{{ item.title }}</h3>
                                    <p>{{ item.description }}</p>
                                </div>
                                <div class="service_two_img">
                                    <img src="{{ item.image }}" alt="{{ item.alt or item.title }}" loading="lazy" decoding="async"></div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
        <!-- Services Area End --
        {% endblock %}