<!-- Footer Area Start -->
<footer id="footer_area" class="footer">
    <div class="container">
        <div
            class="row">
            <!-- Marca + resumen -->
            <div class="col-lg-4 col-md-12">
                <div class="footer_wedget">
                    <a href="/" class="footer__brand d-inline-block">
                        <img src="/public/assets/img/logow.png" alt="{{ site.name }}" style="max-height: 56px;">
                    </a>
                    <p class="mt-3">
                        {{ __ ('footer.footer.summary')}}
                    </p>
                    <!-- Datos de contacto reales -->
                    <ul class="list-unstyled footer__contact mt-3">
                        <li>
                            <i class="fas fa-phone-alt"></i>
                            <a href="tel:{{ site.phone1 | replace(' ', '') }}">{{ site.phone1 }}</a>
                        </li>
                        <li>
                            <i class="fas fa-phone-alt"></i>
                            <a href="tel:{{ site.phone2 | replace(' ', '') }}">{{ site.phone2 }}</a>
                        </li>
                        <li>
                            <i class="far fa-envelope"></i>
                            <a href="mailto:{{ site.email1 }}">{{ site.email1 }}</a>
                        </li>
                        <li>
                            <i class="far fa-envelope"></i>
                            <a href="mailto:{{ site.email2 }}">{{ site.email2 }}</a>
                        </li>
                    </ul>
                    <!-- Social (deja #! si aún no hay perfiles oficiales) -->
                    <div class="footer_social_icon mt-3">
                        <a href="#!" aria-label="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#!" aria-label="LinkedIn">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a href="#!" aria-label="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Navegación -->
            <div class="col-lg-2 col-md-6 col-sm-6">
                <div class="footer_wedget footer_navigation">
                    <h4>{{__('footer.footer.navigation_title')}}</h4>
                    <ul>
                        <li><a href="/">{{__('footer.footer.navigation.home')}}</a></li>
                        <li><a href="/nosotros">{{__('footer.footer.navigation.about')}}</a></li>
                        <li><a href="/servicios">{{__('footer.footer.navigation.services')}}</a></li>
                        <li><a href="/galeria">{{__('footer.footer.navigation.gallery')}}</a></li>
                        <li><a href="/contacto">{{__('footer.footer.navigation.contact')}}</a></li>
                    </ul>
                </div>
            </div>
            <!-- Servicios reales -->
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="footer_wedget footer_navigation">
                    <h4>{{__('footer.footer.services_title')}}</h4>
                    <ul>
                        <li><a href="#">{{__('footer.footer.services_list.transport')}}</a></li>
                        <li><a href="#">{{__('footer.footer.services_list.containers')}}</a></li>
                        <li><a href="#">{{__('footer.footer.services_list.loose')}}</a></li>
                        <li><a href="#">{{__('footer.footer.services_list.oversize')}}</a></li>
                        <li><a href="#">{{__('footer.footer.services_list.yard')}}</a></li>
                        <li><a href="#">{{__('footer.footer.services_list.monitoring')}}</a></li>
                        <li><a href="#">{{__('footer.footer.services_list.support')}}</a></li>
                    </ul>
                </div>
            </div>
            <!-- Mini galería / Unidades -->
            <div class="col-lg-3 col-md-12">
                <div class="footer_wedget">
                    <h4>{{__('footer.footer.units_title')}}</h4>
                    <div class="footer_gallery_area">
                        <div class="footer_gallery_img">
                            <a href="#" title="Kenworth T680 2015">
                                <img src="/public/assets/img/galeria/6.jpg" alt="Kenworth T680 2015">
                            </a>
                        </div>
                        <div class="footer_gallery_img">
                            <a href="#" title="International 2017">
                                <img src="/public/assets/img/galeria/10.jpg" alt="International 2017">
                            </a>
                        </div>
                        <div class="footer_gallery_img">
                            <a href="#" title="Freightliner 2013">
                                <img src="/public/assets/img/galeria/11.jpg" alt="International 2017">
                            </a>
                        </div>
                        <div class="footer_gallery_img">
                            <a href="#" title="Patio de desconsolidación">
                                <img src="/public/assets/img/galeria/5.jpg" alt="International 2017">
                            </a>
                        </div>
                    </div>
                    <small class="d-block mt-2 text-muted">{{__('footer.footer.gallery_note')}}</small>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- Copy -->
<div id="copy_right">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="copy-right-area">
                    <p>
                        &copy; {{ year }}
                        <span>{{ site.name }}</span>. {{__('footer.footer.copyright')}}.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Footer Area End -->