{% extends "templates/portal.njk" %}
{% block content %}
    <section class="home_three_banner">
        <div class="home_three_slider_wrapper owl-theme owl-carousel">
            <div class="home_three_slider_item" style="background-image:url(/public/assets/img/imagenes/banner2.png)">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="home_three_banner_text">
                                <h5>{{ __('home.banner.welcome') }}
                                    <span>{{ __('home.banner.company') }}</span>
                                </h5>
                                <h1>{{ __('home.banner.title') }}</h1>
                                <p>
                                    {{ __('home.banner.description') }}
                                </p>
                                <a class="btn btn-theme" href="contacto.html">{{ __('home.banner.cta') }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- About Area -->
    <section class="about_area_three">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="home_three_about_img">
                        <img src="public/assets/img/galeria/12.jpg" alt="CamiÃ³n The Brothers Logistic"></div>
                    </div>
                    <div class="col-lg-6">
                        <div class="home_three_about_text_wrapper">
                            <div class="about_three_top">
                                <span class="top_line"></span>
                                <h5>{{ __('home.about.heading') }}</h5>
                            </div>
                            <div class="about_three_middel_cntent">
                                <h2>{{ __('home.about.title') }}</h2>
                                <p>
                                    {{ __('home.about.paragraph1') }}
                                </p>
                                <p>
                                    {{ __('home.about.paragraph2') }}
                                </p>
                            </div>
                            <div class="about_three_bottom">
                                <div class="about_three_bottom_item">
                                    <img src="public/assets/img/home-3/icon/world.png" alt="icon">
                                        <div class="about_three_bottom_left">
                                            <h3>{{ __('home.about.features.specialized_transport.title') }}</h3>
                                            <p>{{ __('home.about.features.specialized_transport.description') }}</p>
                                        </div>
                                    </div>
                                    <div class="about_three_bottom_item">
                                        <img src="public/assets/img/home-3/icon/box.png" alt="icon">
                                            <div class="about_three_bottom_left">
                                                <h3>{{ __('home.about.features.local_regional.title') }}</h3>
                                                <p>{{ __('home.about.features.local_regional.description') }}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- About Area -->
                <section id="home_two_service">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="section_heading_center">
                                    <h2>{{ __('home_two_service.heading') | replace("\n", "<br>") | safe }}</h2>
                                    <p>{{ __('home_two_service.intro') }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                <div
                                    class="service_slider_home_two owl-theme owl-carousel">
                                    <!-- Servicio 1 -->
                                    {% set services = __('home_two_service.items') %}
                                    {% for service in services %}
                                        <div class="service-card">
                                            <img src="{{service.img}}" alt="Carga Contenerizada">
                                                <div class="service-caption">
                                                    <h3>{{ service.title }}</h3>
                                                    <p>{{ service.desc }}</p>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                {% endblock %}